<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.quick4j.upm.paths.entity.ActionInPathMapper">
    <resultMap id="actionInPathResult" type="com.github.quick4j.upm.paths.entity.ActionInPath">
        <result column="id" property="id"/>
        <result column="path_id" property="pathId"/>
        <result column="action_id" property="actionId"/>
        <result column="action_code" property="actionCode"/>
        <result column="application_id" property="applicationId"/>
    </resultMap>

    <select id="selectAllByPathIds" resultMap="actionInPathResult">
        select id, action_id, action_code, path_id, application_id
        from upm_actionInPath
        <where>
            <foreach collection="array" item="id" index="index" open="(" separator="or" close=")">
                path_id = #{id}
            </foreach>
        </where>
    </select>
</mapper>