<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.quick4j.upm.paths.entity.PathMapper">

    <resultMap id="pathResult" type="com.github.quick4j.upm.paths.entity.Path">
        <result column="id" property="id"/>
        <result column="path_name" property="name"/>
        <result column="path" property="path"/>
        <result column="path_icon" property="icon"/>
        <result column="path_index" property="index"/>
        <result column="pid" property="pid"/>
    </resultMap>

    <select id="selectOne" resultMap="pathResult" parameterType="string">
        select id, path_name, path, path_icon, path_index, pid
        from upm_paths
        where id=#{id}
    </select>

    <select id="selectList" resultMap="pathResult" parameterType="map">
        select id, path_name, path, path_icon, path_index, pid
        from upm_paths
        <where>
            <if test="applicationId != null and applicationId != ''">
                and application_id = #{applicationId}
            </if>
            <if test="pid != null and pid != ''">
                and pid = #{pid}
            </if>
        </where>
        order by path_index
    </select>

    <select id="selectPaging" resultMap="pathResult" parameterType="map">
        select id, path_name, path, path_icon, path_index, pid
        from upm_paths
        <where>
            <if test="applicationId != null and applicationId != ''">
                and application_id = #{applicationId}
            </if>
            <if test="id != null and id != ''">
                and pid = #{id}
            </if>
        </where>
        order by path_index
    </select>

    <!--
    <select id="selectAssignedButtons">
        select id, action_code, action_name, action_code
        from upm_actions t1
        join
    </select>
    -->

    <insert id="insert" parameterType="com.github.quick4j.upm.paths.entity.Path">
        insert into upm_paths(
            id,
            path_name
        <if test="path != null">
                ,path
            </if>
            <if test="icon != null">
                ,path_icon
            </if>
            <if test="index != null">
                ,path_index
            </if>
            <if test="pid != null">
                ,pid
            </if>
            <if test="applicationId != null">
                ,application_id
            </if>
        )
        values (
            #{id},
            #{name}
            <if test="path != null">
                ,#{path}
            </if>
            <if test="icon != null">
                ,#{icon}
            </if>
            <if test="index != null">
                ,#{index}
            </if>
            <if test="pid != null">
                ,#{pid}
            </if>
            <if test="applicationId != null">
                ,#{applicationId}
            </if>
        )
    </insert>

    <update id="updateOne" parameterType="com.github.quick4j.upm.paths.entity.Path">
        update upm_paths
        <set>
            <if test="name != null">
                path_name = #{name},
            </if>
            <if test="path != null">
                path = #{path},
            </if>
            <if test="icon != null">
                path_icon = #{icon},
            </if>
            <if test="index != null">
                path_index = #{index},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="applicationId != null">
                application_id = #{applicationId}
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteOne" parameterType="string">
        delete from upm_paths where id = #{id}
    </delete>
</mapper>