<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.quick4j.upm.roles.entity.PathsInRolesMapper">
    <resultMap id="pathsInRolesResult" type="com.github.quick4j.upm.roles.entity.PathsInRoles">
        <result column="id" property="id"/>
        <result column="role_id" property="roleId"/>
        <result column="path_id" property="pathId"/>
        <result column="action_id" property="actionId"/>
        <result column="action_code" property="actionCode"/>
    </resultMap>

    <select id="selectList" resultMap="pathsInRolesResult" parameterType="string">
      select id, role_id, path_id, action_id, action_code
      from upm_pathsInRoles
      where role_id = #{id}
    </select>

    <insert id="insert" parameterType="com.github.quick4j.upm.roles.entity.PathsInRoles">
        insert into upm_pathsInRoles(id, role_id, path_id, action_id, action_code)
        values(#{id}, #{roleId}, #{pathId}, #{actionId}, #{actionCode})
    </insert>

    <delete id="deleteOne" parameterType="string">
        delete from upm_pathsInRoles where role_id = #{id}
    </delete>

    <delete id="deleteByRoleIdAndPathIdAndActionId" parameterType="com.github.quick4j.upm.roles.entity.PathsInRoles">
        delete from upm_pathsInRoles where role_id = #{roleId} and path_id = #{pathId} and action_id = #{actionId}
    </delete>
</mapper>